{
  "compilerOptions": {
    "module": "nodenext",
    "target": "ESNext",
    "lib": ["ESNext"],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["node", "vscode", "mocha"],
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "out",
    "**/__pycache__",
    ".vscode-test"
  ]
}
