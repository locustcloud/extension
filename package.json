{
  "name": "locust-vscode-extension",
  "displayName": "Locust Load Testing",
  "description": "VS Code extension to scaffold, run, and manage Locust load tests.",
  "version": "0.0.1",
  "publisher": "locust",
  "extensionKind": [
    "workspace"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "extensionDependencies": [
    "ms-python.python"
  ],
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onCommand:locust.init",
    "onCommand:locust.createSimulation",
    "onCommand:locust.runUI",
    "onCommand:locust.runHeadless",
    "onCommand:locust.stop",
    "onCommand:locust.refreshTree",
    "onCommand:locust.runFileUI",
    "onCommand:locust.runFileHeadless",
    "onCommand:locust.runTaskHeadless",
    "onView:locust.scenarios"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "locust.scenarios",
          "name": "Locust Scenarios"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "locust.refreshTree",
          "when": "view == locust.scenarios",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "locust.runFileUI",
          "when": "view == locust.scenarios && viewItem == file",
          "group": "inline"
        },
        {
          "command": "locust.runFileHeadless",
          "when": "view == locust.scenarios && viewItem == file",
          "group": "inline"
        },
        {
          "command": "locust.runTaskHeadless",
          "when": "view == locust.scenarios && viewItem == task",
          "group": "inline"
        }
      ]
    },
    "commands": [
      {
        "command": "locust.init",
        "title": "Locust: Initialize (Install/Detect)"
      },
      {
        "command": "locust.createSimulation",
        "title": "Locust: Create Simulationâ€¦"
      },
      {
        "command": "locust.runUI",
        "title": "Locust: Run (Web UI)"
      },
      {
        "command": "locust.runHeadless",
        "title": "Locust: Run (Headless)"
      },
      {
        "command": "locust.stop",
        "title": "Locust: Stop Run"
      },
      {
        "command": "locust.refreshTree",
        "title": "Locust: Refresh Scenarios"
      },
      {
        "command": "locust.runFileUI",
        "title": "Locust: Run File (Web UI)"
      },
      {
        "command": "locust.runFileHeadless",
        "title": "Locust: Run File (Headless)"
      },
      {
        "command": "locust.runTaskHeadless",
        "title": "Locust: Run Task (Headless)"
      }
    ],
    "configuration": {
      "title": "Locust",
      "properties": {
        "locust.path": {
          "type": "string",
          "default": "locust",
          "description": "Path to the Locust CLI executable."
        },
        "locust.envFolder": {
          "type": "string",
          "default": ".venv",
          "description": "Name of the local Python environment folder."
        },
        "locust.defaultHost": {
          "type": "string",
          "default": "",
          "description": "Default host to target in generated locustfile.py."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "npm run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.0.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
