{
  "name": "locust-vscode-extension",
  "displayName": "Locust",
  "description": "VS Code extension to scaffold, run, and manage Locust load tests.",
  "version": "0.0.1",
  "publisher": "locust",
  "icon": "media/icon_green.png",
  "galleryBanner": {
    "color": "#0e1116",
    "theme": "dark"
  },
  "extensionKind": ["workspace"],
  "engines": {
    "node": ">=20",
    "vscode": "^1.90.0"
  },
  "capabilities": {
    "untrustedWorkspaces": { "supported": false }
  },
  "extensionDependencies": ["ms-python.python"],
  "categories": ["Testing"],
  "keywords": ["locust", "load testing", "performance", "python"],
  "activationEvents": [
    "workspaceContains:locustfile.py",
    "onView:locust.welcome",
    "onView:locust.scenarios",
    "onCommand:locust.openCopilotWalkthrough",
    "onCommand:locust.showWelcome",
    "onCommand:locust.hideWelcome",
    "onCommand:locust.createSimulation",
    "onCommand:locust.convertHar",
    "onCommand:locust.startBeginnerTour",
    "onCommand:locust.openBeginnerTourPage",
    "onCommand:locust.runUI",
    "onCommand:locust.runHeadless",
    "onCommand:locust.installCopilot",
    "onCommand:locust.openLocustCloud"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "locust",
          "title": "Locust",
          "icon": "media/icon.png"
        }
      ]
    },
    "views": {
      "locust": [
        {
          "id": "locust.welcome",
          "name": "Locust Menu",
          "type": "webview",
          "when": "locust.hideWelcome != true"
        },
        {
          "id": "locust.scenarios",
          "name": "Locust Tests",
          "icon": "media/icon.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        { "command": "locust.refreshTree", "when": "view == locust.scenarios", "group": "navigation" },
        { "command": "locust.createSimulation", "when": "view == locust.scenarios", "group": "navigation@1" },
        { "command": "locust.openCopilotWalkthrough", "when": "view == locust.scenarios", "group": "navigation@0" },
        { "command": "locust.startBeginnerTour", "when": "view == locust.welcome", "group": "navigation@-1" },
        { "command": "locust.startBeginnerTour", "when": "view == locust.scenarios", "group": "navigation@-1" },
        { "command": "locust.showWelcome", "when": "view == locust.scenarios && locust.hideWelcome == true", "group": "navigation@9" },
        { "command": "locust.hideWelcome", "when": "view == locust.welcome", "group": "navigation@9" },

        { "command": "locust.openLocustCloud", "when": "view == locust.welcome", "group": "navigation@-2" },
        { "command": "locust.openLocustCloud", "when": "view == locust.scenarios", "group": "navigation@-2" }
      ],
      "view/item/context": [
        { "command": "locust.runFileUI", "when": "view == locust.scenarios && viewItem == locust.file", "group": "inline" },
        { "command": "locust.runFileHeadless", "when": "view == locust.scenarios && viewItem == locust.file", "group": "inline" },
        { "command": "locust.runTaskUI", "when": "view == locust.scenarios && viewItem == locust.task", "group": "inline" },
        { "command": "locust.runTaskHeadless", "when": "view == locust.scenarios && viewItem == locust.task", "group": "inline" },
        { "command": "locust.runUI", "title": "Locust: Run Test (Web UI)" },
        { "command": "locust.runHeadless", "title": "Locust: Run Test (Headless)" }
      ],
      "commandPalette": [
        { "command": "locust.runFileUI", "when": "false" },
        { "command": "locust.runFileHeadless", "when": "false" },
        { "command": "locust.runTaskUI", "when": "false" },
        { "command": "locust.runTaskHeadless", "when": "false" },
        { "command": "locust.startBeginnerTour", "when": "true" }
      ]
    },
    "commands": [
      { "command": "locust.interface", "title": "Menu overview" },
      { "command": "locust.createSimulation", "title": "Locust: Create Simulation (locustfile_###.py)" },
      { "command": "locust.openCopilotWalkthrough", "title": "Locust: Open Copilot Walkthrough", "icon": "$(sparkle)" },
      { "command": "locust.runHeadless", "title": "Locust: Run Test (Headless)" },
      { "command": "locust.refreshTree", "title": "Locust: Refresh Tests" },
      { "command": "locust.runUI", "title": "Locust: Run Test (Web UI)" },
      { "command": "locust.runFileUI", "title": "Locust: Run File (Web UI)", "icon": "$(globe)" },
      { "command": "locust.runFileHeadless", "title": "Locust: Run File (Headless)", "icon": "$(play)" },
      { "command": "locust.runTaskHeadless", "title": "Locust: Run Task (Headless)", "icon": "$(play)" },
      { "command": "locust.runByTag", "title": "Locust: Run by Tag…" },
      { "command": "locust.convertHar", "title": "Locust: Convert HAR → Locustfile…" },
      { "command": "locust.runTaskUI", "title": "Locust: Run Task (Web UI)", "icon": "$(globe)" },
      { "command": "locust.showWelcome", "title": "Locust: Show Welcome", "icon": "$(home)" },
      { "command": "locust.hideWelcome", "title": "Locust: Hide Welcome", "icon": "$(close)" },
      { "command": "locust.startBeginnerTour", "title": "Locust: Start Beginner CodeTour", "icon": "$(book)" },
      { "command": "locust.openBeginnerTourPage", "title": "Locust: Open Beginner Page" },
      { "command": "locust.openBeginnerWalkthrough", "title": "Locust: Open Beginner Walkthrough" },
      { "command": "locust.installCopilot", "title": "Locust: Install GitHub Copilot", "icon": "$(cloud-download)" },

      { "command": "locust.openLocustCloud", "title": "Open Locust Cloud", "icon": "$(cloud)" }
    ],
    "configuration": {
      "title": "Locust",
      "properties": {
        "locust.path": {
          "type": "string",
          "default": "locust",
          "description": "Path to the Locust CLI executable."
        },
        "locust.envFolder": {
          "type": "string",
          "default": ".locust_env",
          "description": "Local locust_env directory."
        },
        "locust.defaultHost": {
          "type": "string",
          "default": "",
          "description": "Default host to target in generated locustfile.py."
        },
        "locust.autoSetup": {
          "type": "string",
          "enum": ["prompt", "always", "never"],
          "default": "always",
          "description": "When the extension activates: prompt to set up the Locust environment, always set it up automatically, or never run setup."
        },
        "locust.offerCopilotOnInit": {
          "type": "boolean",
          "default": true,
          "description": "If true, offer to install GitHub Copilot during the Locust: Initialize setup process."
        },
        "locust.copilot.autoOfferInstallOnce": {
          "type": "boolean",
          "default": true,
          "description": "On first run, quietly offer Copilot install (non-blocking)."
        },

        "locust.cloud.rootUrl": {
          "type": "string",
          "default": "https://auth.locust.cloud/load-test",
          "description": "Where to send logged-in users (opened in VS Code Simple Browser when available)."
        }
      }
    },
    "snippets": [
      { "language": "python", "path": "./snippets/locust.json" }
    ],
    "walkthroughs": [
      {
        "id": "locust.beginnerWalkthrough",
        "title": "Locust Beginner Tour",
        "description": "Start here for a guided, step-by-step tour that teaches Locust from scratch.",
        "steps": [
          {
            "id": "tour-intro",
            "title": "Start the guided CodeTour",
            "description": "Opens a full-page intro with a button that launches the CodeTour.",
            "media": { "markdown": "media/walkthrough/00-beginner-tour.md" }
          }
        ]
      },
      {
        "id": "locust.copilotWalkthrough",
        "title": "Copilot Tutorial (MCP)",
        "description": "Use GitHub Copilot + MCP to convert HAR → Locustfile, list tasks/tags, and run Locust.",
        "steps": [
          {
            "id": "convertHar",
            "title": "Convert HAR → Locustfile",
            "description": "Ask Copilot to convert a HAR into a runnable Locustfile.",
            "media": { "markdown": "media/copilot_tutorial/01-copilot.md" }
          },
          {
            "id": "listTasks",
            "title": "List tasks and tags",
            "description": "Ask Copilot to list @task and @tag entries in a locustfile.",
            "media": { "markdown": "media/copilot_tutorial/02-copilot.md" }
          },
          {
            "id": "runUI",
            "title": "Run Locust in UI mode",
            "description": "Start Locust Web UI via Copilot.",
            "media": { "markdown": "media/copilot_tutorial/03-copilot.md" }
          },
          {
            "id": "stopProcess",
            "title": "Stop Locust",
            "description": "Stop a running Locust process from Copilot.",
            "media": { "markdown": "media/copilot_tutorial/05-copilot.md" }
          },
          {
            "id": "runHeadless",
            "title": "Run Locust headless",
            "description": "Run Locust without the UI via Copilot.",
            "media": { "markdown": "media/copilot_tutorial/06-copilot.md" }
          },
          {
            "id": "result",
            "title": "Tutorial Result",
            "description": "Tutorial step result.",
            "media": { "markdown": "media/copilot_tutorial/07-copilot.md" }
          },
          {
            "id": "workflow",
            "title": "Workflow Example Prompt",
            "description": "Prompt for full workflow.",
            "media": { "markdown": "media/copilot_tutorial/08-copilot.md" }
          }
        ]
      }
    ]
  },
  "files": [
    "out/**",
    "templates/**",
    "media/**",
    "mcp/**",
    "package.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/locustcloud/extension.git"
  },
  "bugs": { "url": "https://github.com/locustcloud/extension/issues" },
  "homepage": "https://www.locust.cloud/",
  "license": "MIT",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "yarn run compile && node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@types/vscode": "1.90.0",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^6.0.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.2",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0",
    "vscode": "^1.1.37"
  }
}
