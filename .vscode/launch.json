{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "preLaunchTask": "yarn: watch"
    },
    {
      "name": "Debug Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/out/test/suite/index.js"
      ],
      "outFiles": ["${workspaceFolder}/out/test/**/*.js"],
      "preLaunchTask": "yarn: compile"
    },
    {
      "name": "Locust: Debug (Web UI)",
      "type": "debugpy",
      "request": "launch",
      "module": "locust",
      "args": ["-f", "${workspaceFolder}/locustfile.py"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Locust: Debug (Headless)",
      "type": "debugpy",
      "request": "launch",
      "module": "locust",
      "args": [
        "-f", "${workspaceFolder}/locustfile.py",
        "--headless", "-u", "10", "-r", "2", "-t", "1m"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Locust: Debug (With Host)",
      "type": "debugpy",
      "request": "launch",
      "module": "locust",
      "args": [
        "-f", "${workspaceFolder}/locustfile.py",
        "-H", "https://mock-test-target.eu-north-1.locust.cloud"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}
