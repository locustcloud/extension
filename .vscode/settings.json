{
  // Package manager: Yarn
  "npm.packageManager": "yarn",

  "files.exclude": {
    "out": true
  },
  
  // workspace venv setup.ts configures
  "python.defaultInterpreterPath": "/home/pablo/dev24/extension/locust_env/bin/python",

  // Stronger analysis = better completions & errors
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.logLevel": "Information",

  // Enable auto-imports
  "python.analysis.autoImportCompletions": true,
  "python.terminal.activateEnvironment": true,

  // Ignore our venv and build output
  "python.analysis.exclude": [
    "**/locust_env/**",
    "**/.venv/**"
  ],

  // Point to custom typings
  "python.analysis.stubPath": "typings",

  // Use workspace TypeScript version
  "typescript.tsdk": "node_modules/typescript/lib",
  "diffEditor.wordWrap": "on"
}
